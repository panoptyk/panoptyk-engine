{
  "compilerOptions": {
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "module": "es6",
    "declaration": true,
    "declarationDir": "./build",
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "outDir": "./build",
    "rootDir": "./src",
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.ignore.ts"
  ]
}