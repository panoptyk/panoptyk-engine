{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es6",
      "sourceMap": true,
      "outDir": "./build",
      "baseUrl": "./",
      "typeRoots": [
        "node_modules/@types",
        "src/types"
      ],
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "node_modules",
    ]
  }