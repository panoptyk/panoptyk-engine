{
  "compilerOptions": {
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "composite": true,
    "typeRoots": [
      "../node_modules/@types",
      "../node_modules/phaser-ce/typescript/",
      "types"
    ]
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.ignore.ts"
  ]
}